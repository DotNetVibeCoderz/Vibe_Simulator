@page "/"
@inject IJSRuntime JS
@rendermode InteractiveServer
<PageTitle>Golden Bridge Traffic Simulator</PageTitle>

<div class="sim-layout">
    <!-- 3D Viewport -->
    <div id="sim-container" class="viewport"></div>

    <!-- Control Panel -->
    <div class="controls glass-panel">
        <h3>Traffic Control</h3>
        
        <div class="control-group">
            <label>Simulation Speed: @simSpeed x</label>
            <input type="range" min="0.1" max="5.0" step="0.1" @bind="simSpeed" @bind:event="oninput" @onchange="UpdateSpeed" />
        </div>

        <div class="control-group">
            <label>Time of Day: @timeOfDay:00</label>
            <input type="range" min="0" max="23" step="1" @bind="timeOfDay" @bind:event="oninput" @onchange="UpdateTime" />
            <div class="time-preview">
                @(timeOfDay >= 6 && timeOfDay < 18 ? "‚òÄÔ∏è Day" : "üåô Night")
            </div>
        </div>

        <div class="control-group">
            <label>Weather Condition</label>
            <div class="btn-group">
                <button class="btn @(weather == "clear" ? "btn-primary" : "btn-secondary")" @onclick='() => SetWeather("clear")'>‚òÄÔ∏è Clear</button>
                <button class="btn @(weather == "rain" ? "btn-primary" : "btn-secondary")" @onclick='() => SetWeather("rain")'>üåßÔ∏è Rain</button>
            </div>
        </div>

        <div class="control-group">
            <label>Actions</label>
            <button class="btn btn-warning w-100" @onclick="ForceSpawn">üö® Force Spawn Car</button>
        </div>

        <div class="status-panel">
            <small>Status: System Online</small>
            <small>Graphics: High Fidelity (ThreeJS)</small>
        </div>
    </div>
</div>

<style>
    .sim-layout {
        position: relative;
        width: 100vw;
        height: 100vh;
        overflow: hidden;
        background-color: #000;
    }

    .viewport {
        width: 100%;
        height: 100%;
        display: block;
    }

    .glass-panel {
        position: absolute;
        top: 20px;
        right: 20px;
        width: 300px;
        background: rgba(20, 20, 30, 0.85);
        backdrop-filter: blur(10px);
        padding: 20px;
        border-radius: 12px;
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
    }

    h3 {
        margin-bottom: 20px;
        font-weight: 300;
        border-bottom: 1px solid rgba(255,255,255,0.2);
        padding-bottom: 10px;
    }

    .control-group {
        margin-bottom: 20px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-size: 0.9rem;
        color: #aaa;
    }

    input[type=range] {
        width: 100%;
    }

    .btn-group {
        display: flex;
        gap: 5px;
    }

    .btn {
        flex: 1;
        padding: 5px 10px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    
    .btn-primary { background: #3498db; color: white; }
    .btn-secondary { background: #444; color: #ccc; }
    .btn-warning { background: #f39c12; color: black; font-weight: bold; }

    .status-panel {
        margin-top: 30px;
        display: flex;
        flex-direction: column;
        opacity: 0.6;
        font-size: 0.8rem;
    }
</style>

@code {
    private double simSpeed = 1.0;
    private int timeOfDay = 12; // Noon
    private string weather = "clear";
    private bool isInitialized = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Give a small delay to ensure DOM is ready and scripts loaded
            await Task.Delay(500);
            await JS.InvokeVoidAsync("TrafficSim.init", "sim-container");
            isInitialized = true;
        }
    }

    private async Task UpdateSpeed()
    {
        if (isInitialized)
            await JS.InvokeVoidAsync("TrafficSim.setSpeed", simSpeed);
    }

    private async Task UpdateTime()
    {
        if (isInitialized)
            await JS.InvokeVoidAsync("TrafficSim.setTime", timeOfDay);
    }

    private async Task SetWeather(string type)
    {
        weather = type;
        if (isInitialized)
            await JS.InvokeVoidAsync("TrafficSim.setWeather", type);
    }

    private async Task ForceSpawn()
    {
        if (isInitialized)
            await JS.InvokeVoidAsync("TrafficSim.spawnCar");
    }
}
