<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GBPlayer.Views.AboutWindow"
        Title="About GBPlayer" Width="300" Height="200" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="GBPlayer" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Text="GameBoy Emulator" HorizontalAlignment="Center" Margin="0,5"/>
        <TextBlock Text="Version 1.0.0" HorizontalAlignment="Center" Margin="0,5"/>
        <TextBlock Text="Created with Avalonia UI" HorizontalAlignment="Center" Margin="0,10"/>
        <Button Content="OK" HorizontalAlignment="Center" Click="Close_Click"/>
    </StackPanel>
</Window>