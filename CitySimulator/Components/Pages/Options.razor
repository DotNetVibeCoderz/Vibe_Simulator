@using CitySimulator.Data
@inject CityEngine Engine

<PageTitle>CitySimulator - Options</PageTitle>

<div class="container mt-4">
    <h2>Simulator Options</h2>
    <hr />

    <div class="card p-3 mb-3">
        <h4>Weather Override</h4>
        <p>Change the weather manually. Note that the simulation engine has a 1% chance every tick to change it randomly.</p>
        
        <div class="btn-group" role="group">
            <button class="btn btn-outline-primary" @onclick='() => SetWeather("Clear")'>â˜€ï¸ Clear</button>
